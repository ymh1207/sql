SELECT TABLE_NAME
  FROM ALL_TABLES
 WHERE 1=1
   AND OWNER = 'OT' 
 GROUP BY TABLE_NAME
  ;


SELECT A.TABLE_NAME
     , A.COLUMN_NAME
     , A.DATA_TYPE
     , A.DATA_LENGTH
     , A.NULLABLE
     , A.COLUMN_ID
  FROM ALL_TAB_COLS A
     , ALL_TABLES B
 WHERE 1=1
   AND A.OWNER = 'OT'
   AND A.OWNER = B.OWNER
   AND A.TABLE_NAME = B.TABLE_NAME
 ORDER BY A.TABLE_NAME, A.COLUMN_ID
;



SELECT 'SELECT ''' || TABLE_NAME || ''' AS TABLE_NAME, COUNT(*) AS CNT FROM ' || TABLE_NAME || ' UNION ALL'
  FROM USER_TABLES
 ORDER BY TABLE_NAME
;
